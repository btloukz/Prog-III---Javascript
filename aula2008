import leitor from 'readline-sync'

function trata(){
    let qtd = leitor.question("Informe a quantidade de numeros que voce quer informar: ")
    console.log(`Você informou que quer digitar ${qtd} numeros...Vamos lá!`)
    let array = []
    for(let i=0;i<qtd;i++){
        while(true){
            let num = leitor.question("Informe o numero: ")
            if(num!=""&&!isNaN(Number(num))){
                array.push(Number(num))
                break
            } else {
                console.error("Errado, digite outro.")
            }
        }
        
    }
    let soma = array.reduce((a,b)=>a+b)
    console.log(soma)
} 

trata()

//COM INCREMENTOS

import leitor from 'readline-sync'

function trata(){
    let qtd = Number(leitor.question("Informe a quantidade de números que deseja tratar: "))
    let array = []
    for(let i=0;i<qtd;i++){
        while(true){
            let num = leitor.question(`Informe o número ${i+1}: `)
            if(num!=""&&!isNaN(num)){
                array.push(Number(num))
                break
            } else {
                console.error("Invalido")
            }
        }
    }
    let soma = array.reduce((a,b)=>a+b)
    console.log(`A soma da lista de ${array.length} números é: ${soma}`)

    let media = soma/array.length
    console.log(`A média é: ${media.toFixed(2)}`)

    let maior = array.reduce((valor1,valor2)=>{
        if(valor1>valor2){
            return valor1
        } else {
            return valor2
        }
    })
    console.log(`O maior número é ${maior}`)
}

trata()

//NOVO EXERCICIO

let qtd = Number(leitor.question("Informe quantos numeros quer tratar: "))
let par = []
let impar = []

function trata(){
    for(let i=0;i<qtd;i++){
        while(true){
            let num = Number(leitor.question(`Informe o ${i+1}º valor: `))
            if(num!=""&&!isNaN(num)){
                if(num%2==0){
                    par.push(num)
                    break
                } else {
                    impar.push(num)
                    break
                }
            } else {
                console.error("Invalido")
            }
        }
    }
    console.log(`A quantidade de números pares é ${par.length}`)
    console.log("--------------------------------------------------------------")
    console.log(`A quantidade de números impares é ${impar.length}`)
}
trata()

