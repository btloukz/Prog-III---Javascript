let lista = [2,4,6]

function soma2(num){
    return num + 2
}

function somaLista(lista, funcao){
    let lista2 = [];
    for (let index=0;index<lista.length;index++){
        lista2.push(funcao(lista[index]))
    }
    return lista2
}

let total = somaLista.map(soma2)

console.log(total)

    
